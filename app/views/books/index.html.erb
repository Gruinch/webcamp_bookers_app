<!Doctype html>
<html lang="ja">
  <head>
    <meta charest="UTF-8">
    <title>Bookers</title>
    <link rel="stylesheet" href="/bookers/app/assets/stylesheets/application.css">
  </head>
<h1>Books</h1>
<table>
  <thread>
   <tr>
   <th>Title</th>
   <th>Body</th>
   <th colspan="3"></th>
   </tr>
   </thread>
    <% @books.each do |book| %>
  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to"Show", book_path(book) %>
      </td>
      <td>
      <%= link_to"Edit", edit_book_path(book) %>
      </td>
      <td>
        <a class="destroy" href="/books/destroy">destroy</a>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>

<h2>New book</h2>
<%= form_with model:@book,local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<div><%= f.submit 'create book' %></div>

<% end %>
</html>
